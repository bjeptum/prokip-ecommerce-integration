# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:prokip123@localhost:5432/prokip_integration?schema=public

# Server
PORT=3000
NODE_ENV=development

# Mock Mode (set to 'true' to use mock servers for testing, 'false' for real APIs)
MOCK_MODE=false

# Mock Server URLs (used when MOCK_MODE=true)
MOCK_PROKIP_URL=http://localhost:4000
MOCK_SHOPIFY_URL=http://localhost:4001
MOCK_WOO_URL=http://localhost:4002

# Shopify OAuth credentials (from your Shopify Partners Dashboard app)
# CLIENT_ID = API Key, CLIENT_SECRET = API Secret Key
SHOPIFY_CLIENT_ID=your_shopify_api_key_here
SHOPIFY_CLIENT_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_inventory,write_inventory,read_orders,write_orders,read_fulfillments,write_fulfillments

# Callback & webhook URLs (update these when deploying to production)
REDIRECT_URI=http://localhost:3000/connections/callback/shopify
WEBHOOK_URL=http://localhost:3000/connections/webhook/shopify

# Prokip API
PROKIP_API=https://api.prokip.africa

# JWT for authentication
JWT_SECRET=change_this_to_a_very_long_random_string_in_production

# Default Admin User (for testing)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=securepassword123
